@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center h-auto">
    <div class="container mx-auto my-32 p-10 w-full md:w-2/3 lg:w-2/5 2xl:w-2/6 bg-white shadow-xl rounded-lg">
        <h1 class="text-4xl mb-10 font-bold text-gray-800">Sign up</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div>
                <label class="block tracking-wide text-grey-darker text-lg font-bold mb-2">
                    Email address
                </label>
                <input asp-for="Input.Email" class="form-control w-full rounded-lg border-gray-100 border-2 p-3 text-lg bg-white" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label class="block tracking-wide text-grey-darker text-lg font-bold mb-2">
                    Password
                </label>
                <input asp-for="Input.Password" class="form-control w-full rounded-lg border-gray-100 border-2 p-3 text-lg bg-white" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <label class="block tracking-wide text-grey-darker text-lg font-bold mb-2">
                    Confirm password
                </label>
                <input asp-for="Input.ConfirmPassword" class="form-control w-full rounded-lg border-gray-100 border-2 p-3 text-lg bg-white" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="flex w-full">
                <button
                    class="w-full bg-gray-200 text-gray-600 hover:text-white hover:bg-pink-300 text-lg py-2 px-4 font-black rounded-xl focus:outline-none focus:shadow-outline h-16"
                    id="registerSubmit"
                    type="submit">
                    CREATE ACCOUNT
                </button>
            </div>
            <div class="pt-5">
                <p class="text-center">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="hover:text-pink-300">Already have an account? Login here.</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}