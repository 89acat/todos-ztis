@model User

<section class="w-80 mx-auto my-36 bg-white rounded-2xl px-8 py-6 my-10 shadow-lg">
    <div class="flex items-center justify-between">
        <span class="text-gray-400 text-base">17d ago</span>
        <span class="text-emerald-400">
            <a href="/profile/edit?id=@Model.Id">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"/>
                </svg>
            </a>
        </span>
    </div>
    <div class="mt-6 w-fit mx-auto">
        <img src="/default-user-image.png" class="rounded-full w-28 " alt="profile picture" srcset="">
    </div>

    <div class="mt-8 ">
        <h2 class="text-gray-900 font-bold text-2xl tracking-wide text-center">@Model.Email</h2>
    </div>
    <p class="text-emerald-400 font-semibold mt-2.5 text-center">
        Active
    </p>


    <div class="mt-8 text-gray-900 text-lg">
        <span class="font-bold">Number of notes:</span>
        <span>@Model.NumberOfTodos</span>
    </div>

    <div class="h-2 w-full bg-gray-100 mt-3 rounded-full">
        <div class="h-2 rounded-full w-0 bg-emerald-400 "></div>
    </div>
    <div class="mt-3 text-gray-900 text-lg">
        <span class="font-bold">Finished:</span>
        <span>@Model.PercentOfCompleted%</span>
    </div>

</section>